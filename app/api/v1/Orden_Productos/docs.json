{
  "paths": {
    "/api/v1/orden_productos": {
      "get": {
        "tags": ["Ordenes de Productos"],
        "description": "Obtener todas las Ordenes de Productos",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",

                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ordenProductoCreated"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },

      "post": {
        "tags": ["Ordenes de Productos"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Crear una orden de producto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ordenProductos": {
                    "$ref": "#/components/schemas/ordenProductos"
                  },
                  "detallesOrdenProductos": {
                    "$ref": "#/components/schemas/detalleOrdenProductos"
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "ordenProductos": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/ordenProductoCreated"
                        }
                      },
                      "detallesOrdenProductos": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/detallesOrdenProductos"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UnauthorizedError"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/orden_productos/{id}": {
      "get": {
        "description": "Obtener una orden de producto por id",
        "tags": ["Ordenes de Productos"],
        "security": [
          {
            "BearerAuth": []
          }
        ],

        "parameters": [
          {
            "in": "path",
            "name": "Id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Id de la orden"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ordenProductos": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ordenProductoCreated"
                      }
                    },
                    "detallesOrdenProductos": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/detallesOrdenProductos"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },

      "put": {
        "tags": ["Productos"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Actualizar una orden",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ordenUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/ordenProductoUpdated"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
