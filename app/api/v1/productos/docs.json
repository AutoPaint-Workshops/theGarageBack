{
  "paths":{
    "/productos":{
      "get":{
        "tags":[
          "Productos"
        ],
        "description":"Obtener todos los productos",
        "responses":{
          "200":{
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "data":{
                      "type":"array",
                      "items":{
                        "$ref":"#/components/schemas/Producto"
                        
                      }
                    }
                  }
                 
                  }
                }
              }
            }
          }
        },
        "post":{
          "tags":[
            "Productos"
          ],
          "security":[
            {
              "BearerAuth":[]
            }
          ],
          "description":"Crear un producto",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"#/components/schemas/ProductoCreate"
                  
                  
                }
              }
            }
          },
          "responses":{
            "201":{
              "content":{
                "application/json":{
                  "schema":{
                    "type":"object",
                    "properties":{
                      "data":{
                        "$ref":"#/components/schemas/Producto"
                      }
                    }
                  }
                }
              }
            },
            "401":{
