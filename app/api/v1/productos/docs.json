      "/productos/search/{searhTerm}":{
        "get":{
          "description":"Obtener un producto por Parametro de busqueda",
          "tags":[
            "Productos"
          ],

          "parameters":[
            {
              "in":"path",
              "name":"SearchTerm",
              "required":true,
              "schema":{
                "type":"string"
              },
              "description":"Nombre de un producto"
            }
          ],
          "responses":{
            "200":{
              "content":{
                "application/json":{
                  "schema":{
                    "type":"object",
                    "properties":{
