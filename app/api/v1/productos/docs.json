      "/productos/misProductos/":{
        "get":{
          "description":"Obtener todos los productos de una Empresa",
          "tags":[
            "Productos"
          ],
          "security":[
            {
              "BearerAuth":[]
            }
          ],
          "responses":{
            "200":{
              "content":{
                "application/json":{
                  "schema":{
                    "type":"object",
                    "properties":{
                      "data":{
                        "type":"array",
                        "items":{
                          "$ref":"#/components/schemas/Producto"
                          
                        }
                      }
                    }
                   
                    }
                  }
                }
              }
            }
          }

        },
        "/productos/filter":{
          "get":{
            "description":"Obtener los productos de una empres filtrado por query de busqueda",
            "tags":[
              "Productos"
            ],
            "parameters":[
              {
                "in":"query",
                "name":"filterCategorias",
                "required":false,
                "schema":{
                  "type":"string"
                },
                "description":"nombre o nombres de categorias separados por (-)"
              },
              {
                "in":"query",
                "name":"filterMarcas",
                "required":false,
                "schema":{
                  "type":"string"
                },
                "description":"nombre o nombres de marcas separados por (-)"
              },
              {
                "in":"query",
                "name":"precioMin",
                "required":false,
                "schema":{
                  "type":"string"
                },
                "description":"precio minimo debe ir acompañado del precio Maaximo"
              },
              {
                "in":"query",
                "name":"precioMax",
                "required":false,
                "schema":{
                  "type":"string"
                },
                "description":"precio maximo debe ir acompañado del precio minimo"
              },
              {
                "in":"query",
                "name":"filterAlmacen",
                "required":false,
                "schema":{
                  "type":"string"
                },
                "description":"nombre o nombres de almacenes separados por (-)"
            }

            ],

            "responses":{
              "200":{
                "content":{
                  "application/json":{
                    "schema":{
                      "type":"object",
                      "properties":{
                        "data":{
                          "type":"array",
                          "items":{
                            "$ref":"#/components/schemas/Producto"
                            
                          }
                        }
                      }
                     
                      }
                    }
                  }
                }
              }
            }
          }
        

        

      

    },
    "components":{
      "schemas":{
        "Producto":{
          "type":"object",
          "properties":{
            "id":{
              "type":"string",
              "example":"321d99a0-3a3f-44ad-b807-6f8413e03ac0"
            },
            "nombre":{
              "type":"string",
              "example":"Frenos de disco"
            },
            "descripcion":{
              "type":"string",
              "example":"Frenos de disco para auto"
            },
            "ficha_tecnica":{
              "type":"string",
              "example":"Frenos de disco para auto"
            },
            "precio":{
              "type":"number",
              "example":50000
            },
            "cantidad_disponible":{
              "type":"number",
              "example":10
            },
            "estatus":{
              "type":"boolean",
              "example":true
            },
            "tipo_entrega":{
              "type":"string",
              "example":"Entrega a domicilio"
            },
            "marca":{
              "type":"string",
              "example":"Brembo"
            },
            "fecha_creacion":{
              "type":"string",
              "format":"date-time",
              "example":"2021-06-01T00:00:00.000Z"
            },
            "fecha_actualizacion":{
              "type":"string",
              "format":"date-time",
              "example":"2021-06-01T00:00:00.000Z"
            }
          }
        },
        "ProductoCreate":{
          "type":"object",
                  "properties":{
                    "nombre":{
                      "type":"string",
                      "example":"Frenos de disco"
                    },
                    "descripcion":{
                      "type":"string",
                      "example":"Frenos de disco para auto"
                    },
                    "ficha_tecnica":{
                      "type":"string",
                      "example":"Frenos de disco para auto"
                    },
                    "precio":{
                      "type":"number",
                      "example":50000
                    },
                    "cantidad_disponible":{
                      "type":"number",
                      "example":10
                    },
                    "estatus":{
                      "type":"boolean",
                      "example":true
                    },
                    "tipo_entrega":{
                      "type":"string",
                      "example":"Entrega a domicilio"
                    },
                    "marca":{
                      "type":"string",
                      "example":"Brembo"
                    }
                  
                  }
        },
        "UnauthorizedError":{
          "type":"object",
          "properties":{
            "message":{
              "type":"string",
              "example":"No autorizado"
            },
            "status":{
              "type":"number",
              "example":401
            }
          }
        }


        },
        "securitySchemes":{
          "BearerAuth":{
            "type":"apiKey",
            "scheme":"bearer",
            "bearerFormat":"JWT",
            "in":"header",
            "name":"Authorization"
          }
    
        }
      }
    }

  

